
define void* Alloc(i32 Size) {
	return KernelHeap->Allocate('Alloc', Size)
}
define void* Alloc(i64 Tag, i32 Size) {
	return KernelHeap->Allocate(Tag, Size)
}
define void* ReAlloc(void* Memory, i32 Size) {
	return KernelHeap->Extend(Memory, Size)
}
define void Free(void* Memory) {
	KernelHeap->Free(Memory)
}

define void* CloneMemory(void* Memory, i32 Size) {
	void* NewBuffer := Alloc(Size)
	
	MoveMemory(NewBuffer, Memory, Size)
	
	return NewBuffer
}