declare void Info(i8*, ...)
declare void DisableInterrupts()

define void Hang() {
    DisableInterrupts()
    loop {asm {emit, 0xF4}}
}

define void Exit(i32 Code) {
    Info("EXIT CALLED\n%stackdump\nHALTING")
    loop {}
}

define void Panic(i8* Reason) {
    Info("PANIC: %s\n%stackdump\nHALTING\n", Reason)
    Hang()
}